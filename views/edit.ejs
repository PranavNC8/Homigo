<% layout(("/layouts/boilerplate")) %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h1 class="fw-semibold text-primary mb-4 text-center">Edit Listing</h1>

      <form
        action="/listings/<%= listingbyid._id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label fw-medium">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listingbyid.title %>"
            class="form-control rounded-3"
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label fw-medium">Description</label>
          <textarea
            name="listing[description]"
            class="form-control rounded-3"
          ><%= listingbyid.description %></textarea>
        </div>

        <!-- Image Preview -->
        <div class="mb-3 text-center">
          <label class="form-label fw-medium d-block mb-2">Current Image</label>
          <% if (listingbyid.image && listingbyid.image.url) { %>
            <img
              src="<%= listingbyid.image.url %>"
              alt="Listing Image"
              class="img-fluid rounded-4 shadow-sm"
              style="max-height: 250px; object-fit: cover;"
            />
          <% } else { %>
            <img
              src="https://via.placeholder.com/500x300?text=No+Image"
              class="img-fluid rounded-4 shadow-sm"
              style="max-height: 250px; object-fit: cover;"
            />
          <% } %>
        </div>

        <div class="mb-3">
          <label for="Image" class="form-label fw-medium">Upload New Image</label>
          <input
            type="file"
            name="listing[image]"
            id="imageInput"
            class="form-control rounded-3"
            accept="image/*"
          />
          <small class="text-muted">Leave empty to keep existing image.</small>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="Price" class="form-label fw-medium">Price</label>
            <input
              type="number"
              name="listing[price]"
              value="<%= listingbyid.price %>"
              class="form-control rounded-3"
            />
          </div>

          <div class="mb-3 col-md-8">
            <label for="Country" class="form-label fw-medium">Country</label>
            <input
              type="text"
              name="listing[country]"
              value="<%= listingbyid.country %>"
              class="form-control rounded-3"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="Location" class="form-label fw-medium">Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%= listingbyid.location %>"
            class="form-control rounded-3"
          />
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-success px-4 py-2 rounded-3">
            <i class="bi bi-arrow-repeat"></i> Update Listing
          </button>
        </div>

        <br /><br /><br />
      </form>
    </div>
  </div>

  <script>
    // ðŸ‘‡ Show preview when selecting new image
    const imageInput = document.getElementById("imageInput");
    imageInput?.addEventListener("change", (event) => {
      const file = event.target.files[0];
      if (file) {
        const imgPreview = document.querySelector("img");
        imgPreview.src = URL.createObjectURL(file);
      }
    });
  </script>
</body>
